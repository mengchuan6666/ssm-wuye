<!--index.wxml-->
<swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" style="height:360rpx">
  <block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image"/>
    </swiper-item>
  </block>
</swiper>
<view class="main">  
  <view class="itemButton notice" bindtap='notice'>
      <text class="iconfont icon-gonggao"></text>
      <text>社区公告</text>
  </view>
  <view class="itemButton repairs" bindtap='repairs'>
      <text class="iconfont icon-weixiu"></text>
      <text>报事报修</text>
  </view>
  <view class="itemButton suggest" bindtap='survey'>
      <text class="iconfont icon-faqitousu"></text>
      <text>信息采集</text>
  </view>
  <view class="itemButton post" bindtap='pay'>
      <text class="iconfont icon-xiaoyouju"></text>
      <text>生活缴费</text>
  </view>
  <view class="itemButton suggest" bindtap='goods'>
      <text class="iconfont icon-xiaoyouju"></text>
      <text>二手置换</text>
  </view>
  <view class="itemButton more" >
      <text class="iconfont icon-gengduo"></text>
  </view>
  <view class="itemButton more-and-more" >
      <!--<text class="iconfont icon-jiaofei"></text>
      <text>物业缴费</text>-->
  </view>
</view>